@model EducationalPlatform.Models.Project
@{
    ViewBag.Title = "UploadFilesForProject";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    @* Make sure the enctype is multipart/form-data *@
    @using (Html.BeginForm("SaveFileToDatabase", "Projects", new { id = Model.ProjectId }, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <p> Upload File</p>
        <input type="file" id="file" name="file" /><br />
        <input type="submit" value="Upload" />
    }
</div>

