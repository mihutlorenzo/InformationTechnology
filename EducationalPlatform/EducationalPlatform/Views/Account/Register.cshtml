@model EducationalPlatform.ViewModels.NewRegisterUser
@{
    ViewBag.Title = "Register";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.RegisterViewModel.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.RegisterViewModel.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.RegisterViewModel.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.RegisterViewModel.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.RegisterViewModel.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.RegisterViewModel.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.RegisterViewModel.FirstName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.RegisterViewModel.FirstName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.RegisterViewModel.LastName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.RegisterViewModel.LastName, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.RegisterViewModel.UserTypeId, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.RegisterViewModel.UserTypeId, new SelectList(Model.UserTypes, "UserTypeId", "Name"), "Select User Type", new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group" id="teacher" hidden>
        @Html.LabelFor(m => m.RegisterViewModel.TeacherCode, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.RegisterViewModel.TeacherCode, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group" id="student" hidden>
        @Html.LabelFor(m => m.RegisterViewModel.SpecializationId, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.RegisterViewModel.SpecializationId, new SelectList(Model.Specializations, "SpecializationId", "SpecializationName"), "Select student's specialization", new { @class = "form-control" })
        </div>
        @Html.LabelFor(m => m.RegisterViewModel.GroupId, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.RegisterViewModel.GroupId, new SelectList(Model.Groups, "GroupId", "GroupName"), "Select student's group", new { @class = "form-control" })
        </div>
        @Html.LabelFor(m => m.RegisterViewModel.SemesterId, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.RegisterViewModel.SemesterId, new SelectList(Model.Semesters, "SemesterId", "SemesterName"), "Select student's semester", new { @class = "form-control" })
        </div>
        @Html.LabelFor(m => m.RegisterViewModel.YearId, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.RegisterViewModel.YearId, new SelectList(Model.Years, "YearId", "YearName"), "Select student's year", new { @class = "form-control" })
        </div>
    </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Register" />
            </div>
        </div>
        }



        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
            @Scripts.Render("~/Scripts/Education/register.js")
        }
