@model EducationalPlatform.ViewModels.CreateProjectStatementViewModel
@{
    ViewBag.Title = "CreateOrUpdateProject";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Create course</h2>


@using (Html.BeginForm("Save", "ProjectsStatement", new { id = Model.CourseId }, FormMethod.Post, null))
{
    <div class="form-group">
        @Html.LabelFor(m => m.ProjectStatement.ProjectName)  
        @Html.TextBoxFor(m => m.ProjectStatement.ProjectName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ProjectStatement.ProjectName)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ProjectStatement.ProjectDescription)
        @Html.TextAreaFor(m => m.ProjectStatement.ProjectDescription, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ProjectStatement.ProjectDescription)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ProjectStatement.ProjectMaxSize)
        @Html.TextBoxFor(m => m.ProjectStatement.ProjectMaxSize, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ProjectStatement.ProjectMaxSize)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ProjectStatement.ProjectDeadline)
        @Html.TextBoxFor(m => m.ProjectStatement.ProjectDeadline, new { @Value = Model.ProjectDeadline, @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ProjectStatement.ProjectDeadline)
    </div>
    @Html.HiddenFor(m => m.ProjectStatement.ProjectStatementId)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}

