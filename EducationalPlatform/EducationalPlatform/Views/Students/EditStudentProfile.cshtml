@model EducationalPlatform.ViewModels.StudentSpecializationGroupSemesterYearViewModel
@{
    ViewBag.Title = "EditStudentPRofile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Save", "Students"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Student.ApplicationUser.FirstName)
        @Html.TextBoxFor(m => m.Student.ApplicationUser.FirstName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Student.ApplicationUser.FirstName)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Student.ApplicationUser.LastName)
        @Html.TextBoxFor(m => m.Student.ApplicationUser.LastName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Student.ApplicationUser.LastName)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Student.SpecializationId)

        @Html.DropDownListFor(m => m.Student.SpecializationId, new SelectList(Model.Specializations, "SpecializationId", "SpecializationName"), new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Student.GroupId)
        @Html.DropDownListFor(m => m.Student.GroupId, new SelectList(Model.Groups, "GroupId", "GroupName"), new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Student.SemesterId)
        @Html.DropDownListFor(m => m.Student.SemesterId, new SelectList(Model.Semesters, "SemesterId", "SemesterName"), new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Student.YearId)
        @Html.DropDownListFor(m => m.Student.YearId, new SelectList(Model.Years, "YearId", "YearName"), new { @class = "form-control" })
    </div>

    @Html.HiddenFor(m => m.Student.StudentId)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>


}

